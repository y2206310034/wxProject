.recommend-box text{
    display: inline-block;
    border:2rpx solid  #000;
    padding:10rpx 20rpx;
    font-size:28rpx;
    margin:20rpx 20rpx 20rpx 0;
}
.recommend-box text:first-of-type{
    background-color:#000;
    color:#fff;
    font-weight:bold;
}




