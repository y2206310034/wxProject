  /* pages/list/list.wxss */
  @import "../commonList.wxss";

.recommend-container{
    padding:10rpx 25rpx 0;
}
.recommend-article{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.date{
    position: relative;
    font-size:52rpx;
    letter-spacing: 10rpx;
    padding-bottom:36rpx;
}

.date::after{
    position: absolute;
    left:62rpx;
    bottom:12rpx;
    display: block;
    content:"";
    width:114rpx;
    height:4rpx;
    background-color:#999;
}

.recommend-title{
    font-size:28rpx;
    text-align: center;
    line-height:56rpx;
}
.recommend-cover{
    margin-top:30rpx;
    width:700rpx;
}
/* .recommend-box{

