.article-type-container{
    position: relative;
}
.article-type-container .type-image{
    width:100%;
}
.type-title{
    width:670rpx;
    position: absolute;
    bottom:-65rpx;
    display:flex;
    flex-direction: column;
    margin:0 40rpx;
    background-color:#FFF;
    /* transform: translateY(-50%); */
}
